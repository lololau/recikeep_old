{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                   
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,      
    "typeRoots": [ "node_modules/@types" ],   
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}